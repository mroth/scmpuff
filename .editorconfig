# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.sh]
indent_style = space
indent_size  = 2

[*.{rb,feature}]
indent_style = space
indent_size  = 2

[*.md]
indent_style = space
indent_size  = 4
trim_trailing_whitespace = false
